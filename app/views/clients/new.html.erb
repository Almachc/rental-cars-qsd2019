<h1>Cadastrar cliente</h1>

<% if @client.errors.any? %>
    <p>VocÃª deve corrigir os seguintes erros para continuar:</p>
    
    <% @client.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
<% end %>

<%= form_with model: @client, local: true do |f| %>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
    <%= f.label :cpf, 'CPF' %>
    <%= f.text_field :cpf %>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %>
    <%= f.submit 'Enviar' %>
<% end %>