<h1>Cadastrar locação</h1>

<%= form_with model: @rental, local: true do |f| %>
    <%= f.label :start_date, 'Data de início' %>
    <%= f.text_field :start_date %>
    <%= f.label :end_date, 'Data de término' %>
    <%= f.text_field :end_date %>
    <%= f.label :client_id, 'Cliente' %>
    <%= f.collection_select :client_id, @clients, :id, :name %>
    <%= f.label :car_category_id, 'Categoria de carro' %>
    <%= f.collection_select :car_category_id, @car_categories, :id, :name %>
    <%= f.submit 'Enviar' %>
<% end %>